{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@<%= npmScope %>/*": ["../../libs/*"],
            "@<%= npmScope %>/nativescript": [
              "../../xplat/<%= xplatFolderName %>/index.ts"
            ],
            "@<%= npmScope %>/nativescript/*": [
              "../../xplat/<%= xplatFolderName %>/*"
            ],
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}