{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "types": ["jasmine", "node"],
    "baseUrl": "./",
    "paths": {
      "@<%= npmScope %>/*": ["../../../libs/*"],
      "@<%= npmScope %>/ionic": [
        "../../../xplat/<%= xplatFolderName %>/index.ts"
      ],
      "@<%= npmScope %>/ionic/*": ["../../../xplat/<%= xplatFolderName %>/*"],
      "@<%= npmScope %>/web": ["../../../xplat/web/index.ts"],
      "@<%= npmScope %>/web/*": ["../../../xplat/web/*"]
    }
  },
  "files": ["test.ts", "polyfills.ts"],
  "include": ["**/*.spec.ts", "**/*.d.ts"]
}
