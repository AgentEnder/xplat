{
  "$schema": "http://json-schema.org/schema",
  "id": "initXplatWorkspace",
  "title": "xplat schema",
  "type": "object",
  "properties": {
    "platforms": {
      "type": "string",
      "description": "Target platforms to support."
    },
    "framework": {
      "type": "string",
      "description": "Target frameworks to support."
    },
    "prefix": {
      "type": "string",
      "description": "The prefix to apply to generated selectors.",
      "alias": "p"
    },
    "npmScope": {
      "type": "string",
      "description": "The npm scope to use.",
      "alias": "wn"
    },
    "setDefault": {
      "type": "boolean",
      "description": "Save options as defaults. Used most often to set the specified framework as your primary.",
      "default": false
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependency packages.",
      "type": "boolean",
      "default": false
    }
  }
}
