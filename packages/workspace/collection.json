{
  "name": "xplat/workspace",
  "version": "0.1",
  "extends": ["@nrwl/workspace"],
  "schematics": {
    "ng-add": {
      "factory": "./src/schematics/ng-add",
      "schema": "./src/schematics/ng-add/schema.json",
      "description": "Add xplat to an existing Nx Workspace",
      "hidden": true
    },
    "mode": {
      "factory": "./src/schematics/mode",
      "schema": "./src/schematics/mode/schema.json",
      "description": "Multi-platform development modes for IDEs."
    },
    "xplat": {
      "factory": "./src/schematics/xplat",
      "schema": "./src/schematics/xplat/schema.json",
      "description": "Add xplat testing support.",
      "hidden": true
    },
    "helpers": {
      "factory": "./src/schematics/helpers",
      "schema": "./src/schematics/helpers/schema.json",
      "description": "xplat helpers for various toolchains."
    },
    "ts-config": {
      "factory": "./src/schematics/ts-config",
      "schema": "./src/schematics/ts-config/schema.json",
      "description": "Configure tsconfig for xplat.",
      "hidden": true
    }
  }
}
