{
  "$schema": "http://json-schema.org/schema",
  "id": "xplatWorkspace",
  "title": "xplat schema",
  "type": "object",
  "properties": {
    "platforms": {
      "type": "string",
      "description": "Target platforms to support."
    },
    "prefix": {
      "type": "string",
      "description": "The prefix to apply to generated selectors.",
      "alias": "p"
    },
    "npmScope": {
      "type": "string",
      "description": "The npm scope to use.",
      "alias": "wn"
    },
    "onlyIfNone": {
      "type": "boolean",
      "description": "Only create if not present yet.",
      "default": false
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  }
}
